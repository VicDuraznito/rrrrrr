          <td class="p-3">{{salary}}</td>
          <td class="p-3">{{job}}</td>
          <td class="py-3 px-6">{{age}}</td>
          <td class="p-3">{{role}}</td>
          
         
          <td class="p-3 flex">
           
              <button class="bg-red-500 text-white px-3 py-1 rounded-sm" type="submit">
                <i class="fas fa-trash"></i></button>
            </form>

          </td>
