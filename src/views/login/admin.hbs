<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
  <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg mt-12">

    <table class="table-fixed w-full">
      <thead>
        <tr class="bg-green-500 text-white">
          <th class="w-20 py-4 ...">ID</th>
          <th class="w-20 py-4 ...">NAME</th>
          <th class="w-20 py-4 ...">LASTNAME</th>
          <th class="w-20 py-4 ...">EMAIL</th>
          <th class="w-20 py-4 ...">SALARY</th>
          <th class="w-20 py-4 ...">JOB</th>
          <th class="w-20 py-4 ...">AGE</th>
          <th class="w-20 py-4 ...">ROLE</th>
          
        
        </tr>
      </thead>
      <tbody>
        {{#each users }}
        <tr>
