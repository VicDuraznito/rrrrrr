<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg ">
    <h1 class="text-3x1 m-16 font-bold text-center">Register</h1>

    <form action="" method="POST" class="mt-4">
        
        <input type="text" name="name" placeholder="First name"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" required>

        <input type="text" name="Last_name" placeholder="Last name"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" required>

        <input type="number" name="Salary" placeholder="Salary"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" required>

        <input type="text" name="Job" placeholder="Job"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" required>

        <input type="number" name="Age" placeholder="Age"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" required>

        <input type="email" name="Email" placeholder="Email"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" required>

        <input type="password" name="Password" placeholder="Password"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" required>

        <button type="submit" class="rounded-md bg-red-700 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-red-800 foucs:bg-red-800">Register</button>

        {{#if error}}
            <p class="text-red-500 font-bold text-lg my-3">* {{error}}</p>
        {{/if}}

    </form>
</div>